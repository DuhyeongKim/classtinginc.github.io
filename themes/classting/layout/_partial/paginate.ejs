<% var format = config.pagination_dir + '/%d/'; %>
<nav aria-label="article navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <%- page.prev === 0 ? ' disabled' : '' %>">
      <a class="page-link" href="#" tabindex="-1">Previous</a>
    </li>
    <% for (var i = 1; i <= page.total; i++) { %>
        <li class="page-item"><a class="page-link" href="<%- url_for(page.base + format.replace('%d', 2)) %>"><%- i %></a></li>
    <% } %>
    <li class="page-item <%- page.next === 0 ? ' disabled' : '' %>">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>
