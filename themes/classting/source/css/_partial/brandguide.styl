.brandguide
  text-align: left

  img
    margin: auto

  p
    min-height: 50px;

  dt
    margin: 6px 0

  dd
    color: color-grey-400
    margin-bottom: 16px

  .brand-desc
    margin-top: 16px;

  .section-title
    text-align: center
    margin-bottom: 80px

  .btn-green
    width: 240px !important

  .usage
    margin-top: 60px;

  .mobile
    @media only screen and (max-width : 768px)
      display: block

    @media only screen and (min-width : 768px)
      display: block

    @media only screen and (min-width : 992px)
      display: none

    @media only screen and (min-width : 1200px)
      display: none

  .pc
    @media only screen and (max-width : 768px)
      display: none

    @media only screen and (min-width : 768px)
      display: none

    @media only screen and (min-width : 992px)
      display: block

    @media only screen and (min-width : 1200px)
      display: block

.bottom-divider
  @extend $divider-bottom

.box
  border:1px solid color-grey-200
  display: flex;
  flex-direction: column;
  justify-content: center;

.logotype
  height: 240px
  padding: 20px

.logo-variation
  height: 160px
  padding: 20px

.logo-img
  max-height:100%
  max-width:100%

.bg-green
  background-color: color-green-500

.bg-grey
  background-color: color-grey-450

#colorbar-green
  height: 32px
  background-color: color-green-500

#colorbar-yellow
  height: 32px
  background-color: color-yellow-500
