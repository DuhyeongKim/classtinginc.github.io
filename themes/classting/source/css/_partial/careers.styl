.how-we-work .row
  margin-top: 48px

  @media only screen and (max-width : 992px)
    img
      margin: auto
      width: 160px

    @media only screen and (max-width : 992px)
      margin: auto

  .mobile
    @media only screen and (max-width : 768px)
      display: block

    @media only screen and (min-width : 768px)
      display: block

    @media only screen and (min-width : 992px)
      display: none

    @media only screen and (min-width : 1200px)
      display: none

  .pc
    @media only screen and (max-width : 768px)
      display: none

    @media only screen and (min-width : 768px)
      display: none

    @media only screen and (min-width : 992px)
      display: block

    @media only screen and (min-width : 1200px)
      display: block

.benefit
  margin-bottom: 30px
  img
    width:36px

.find-members
  @extend $divider-top
  margin: 48px 15px

  article
    @extend $divider-bottom
    position: relative
    overflow: hidden
    padding: 16px

    .btn-lg
      position: absolute
      margin-top: -22px
      top: 50%
      right: 0

.position-faq
  text-align: center
  padding-right: 15px
  padding-left: 15px

  p
    margin-top: 16px

  a
    color: color-green-500
    text-decoration: underline

    &:hover
      font-weight: bold
