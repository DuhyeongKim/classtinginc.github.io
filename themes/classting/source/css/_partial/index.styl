.readership, .investors, .location
  @extend $divider-top

.inner-section
  margin-top: 48px

  h3, .profile
    padding: 16px 16px 0

.description
  padding: 0 16px
  margin-top: 24px
  font-size: 18px
  line-height: 1.6
  text-align: center
  word-wrap: break-word

.stats
  text-align: center

  h2
    margin-bottom: 0 !important

  figure
    margin-top: 48px

  img
    width: 100%

.culture
  .wrap
    padding: 64px 0

  & > .description
    margin-top: 64px
    padding: 0 48px

.investors
  .investor
    margin-top: 16px

  img
    margin: auto

.office
  h3
    margin-top: 0

  img
    width: 100%

  span
    display: block
    margin-top: 8px

.map
  @media only screen and (max-width : 768px)
    padding-bottom: 16px

.map iframe
  width: 100%
  height: 400px
  border: none

.profile
  overflow: hidden
  padding-top: 16px

  h3
    margin-bottom: 0

  p
    margin-top: 8px

  dt
    font-size: 18px
    float: left

  dd
    margin-left: 96px
    margin-right: 16px
    font-size: 18px
    color: color-grey-400

  a
    color: color-grey-100
