.aboutus-cover
  @extend $wide
  background-image: url(images/ct_aboutus.jpg)

.leadership, .investors, .location
  @extend $divider-top

.inner-section
  margin-top: 48px

  h3, .profile
    padding: 16px 16px 0

.description
  padding: 0 16px
  margin-top: 24px
  font-size: 18px
  line-height: 1.6
  text-align: center
  word-wrap: break-word

.stats
  text-align: center

  h2
    margin-bottom: 8px !important

  .stat-num
    font-size: 32px
    font-weight: 400
    color: color-black

  .stat-category
    color: color-black !important

  .col-lg
    padding: 24px 0

  .row
    padding-top: 64px !important

.culture
  .wrap
    @extend $wide
    background-image: url(images/ct_culture.jpg)

  & > .description
    margin-top: 64px
    padding: 0 48px

.leadership .description
  margin-bottom: 64px

.investors
  .investor
    margin-top: 16px

  img
    margin: auto
    max-width: 240px

.office
  h3
    margin-top: 0

  img
    width: 100%

  span
    display: block
    margin-top: 8px

.map
  @media only screen and (max-width : 768px)
    padding-bottom: 16px

.map iframe
  width: 100%
  height: 400px
  border: none

.profile
  overflow: hidden
  padding: 16px 0
  margin: 15px 0

  h3
    margin-bottom: 0

  p
    margin-top: 8px

  dt
    font-size: 18px

  dd
    margin-right: 16px
    color: color-grey-400

  a
    color: color-grey-100
