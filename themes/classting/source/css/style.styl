body
  padding-top: 70px
  padding-bottom: 147px

  @media only screen and (max-width : 768px)
    padding-bottom: 177px

#page
  section
    padding: 64px 0

  h2, h3, h4, p, address, dt
    color: color-black

  span
    color: color-grey-400

  h2
    font-size: 36px
    text-align: center
    margin-bottom: 48px
    display: block
    font-weight: 400

  dl
    margin: 0

  .row
    padding: 0 16px

  .container-fluid
    background-color: #eee
    text-align: center

  .wide
    padding: 128px 0
    font-size: 36px
    font-weight: 100

  .btn-white
    @extend $round-white-btn
    width: 240px
    padding: 8px 0

  .btn-green
    @extend $round-green-btn
    width: 100%
    padding: 8px 0

