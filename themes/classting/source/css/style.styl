body
  padding-top: 70px;
  padding-bottom: 147px;

  @media only screen and (max-width : 768px)
    padding-bottom: 177px;

#page
  section
    padding: 64px 0;

  h2, h3, h4, p, address, dt
    color: color-grey-300;

  span
    color: color-grey-100;

  h2
    font-size: 36px;
    text-align: center;
    margin-bottom: 48px;
    display: block;

  dl
    margin: 0;

  .row
    padding: 0 16px;

  .container-fluid
    background-color: #eee
    text-align: center

  .wide
    padding: 128px 0
    font-size: 36px

